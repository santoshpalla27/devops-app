{
    "index_patterns": [
        "audit-logs-*"
    ],
    "template": {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "index.lifecycle.name": "audit-logs-policy",
            "index.lifecycle.rollover_alias": "audit-logs"
        },
        "mappings": {
            "properties": {
                "@timestamp": {
                    "type": "date"
                },
                "action": {
                    "type": "keyword"
                },
                "user": {
                    "type": "keyword"
                },
                "resource": {
                    "type": "keyword"
                },
                "resource_id": {
                    "type": "keyword"
                },
                "outcome": {
                    "type": "keyword"
                },
                "ip_address": {
                    "type": "ip"
                },
                "user_agent": {
                    "type": "text"
                },
                "details": {
                    "type": "object"
                },
                "service": {
                    "type": "keyword"
                },
                "environment": {
                    "type": "keyword"
                }
            }
        }
    },
    "priority": 100
}