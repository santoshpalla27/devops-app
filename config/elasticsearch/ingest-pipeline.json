{
    "description": "Ingest pipeline for processing logs from Logstash",
    "processors": [
        {
            "date": {
                "field": "timestamp",
                "target_field": "@timestamp",
                "formats": [
                    "ISO8601",
                    "yyyy-MM-dd'T'HH:mm:ss.SSSZ",
                    "yyyy-MM-dd HH:mm:ss"
                ],
                "ignore_failure": true
            }
        },
        {
            "remove": {
                "field": "timestamp",
                "ignore_missing": true
            }
        },
        {
            "lowercase": {
                "field": "level",
                "ignore_missing": true
            }
        },
        {
            "set": {
                "field": "processed_at",
                "value": "{{_ingest.timestamp}}"
            }
        },
        {
            "user_agent": {
                "field": "user_agent",
                "target_field": "user_agent_parsed",
                "ignore_missing": true,
                "ignore_failure": true
            }
        },
        {
            "geoip": {
                "field": "source_ip",
                "target_field": "geoip",
                "ignore_missing": true,
                "ignore_failure": true
            }
        }
    ],
    "on_failure": [
        {
            "set": {
                "field": "_ingest.error",
                "value": "{{ _ingest.on_failure_message }}"
            }
        }
    ]
}