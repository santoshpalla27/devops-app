{
    "index_patterns": [
        "application-logs-*"
    ],
    "template": {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "index.lifecycle.name": "application-logs-policy",
            "index.lifecycle.rollover_alias": "application-logs"
        },
        "mappings": {
            "properties": {
                "@timestamp": {
                    "type": "date"
                },
                "level": {
                    "type": "keyword"
                },
                "logger_name": {
                    "type": "keyword"
                },
                "message": {
                    "type": "text"
                },
                "thread_name": {
                    "type": "keyword"
                },
                "service": {
                    "type": "keyword"
                },
                "environment": {
                    "type": "keyword"
                },
                "trace_id": {
                    "type": "keyword"
                },
                "span_id": {
                    "type": "keyword"
                },
                "request_id": {
                    "type": "keyword"
                }
            }
        }
    },
    "priority": 100
}